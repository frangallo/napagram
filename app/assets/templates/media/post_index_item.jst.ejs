<div class="panel panel-default">

    <div class="panel-heading group">
      <div class="prof-pic">
          <img src="<%= profile_picture.escape('thumb_url') %>" alt="Profile Picture" />
      </div>
      <div class="name-location">
        <a href="#users/<%= author.escape("id") %>"><%= author.escape("username") %></a><br>
        <%= post.escape("location") %>
      </div>
    </div>

    <div class="image-wrapper">
      <div class="post-image" data-post-id="<%= post.get("id")%>">
        <img src="<%= picture.escape('url')%>" alt="" />
      </div>
    </div>

  <div class="panel-footer">
    <div class="num-likes">
    <%= post.escape('num_likes') %> likes
    </div>
    <div class="caption">
      <% if(post.escape("description")) { %>
        <a href="#/users/<%= author.escape("id") %>"><%= author.escape('username') %></a> <%= post.escape("description") %>
        <% }%>
    </div>

    <div class="comments">
    </div>
    <div class="separator long-separator">

    </div>
    <div class="like-comments group">
      <% if (post.like().isNew()) { %>
        <div class="heart-image" style="background-image: url(http://i.imgur.com/FaUHzc7.png)"></div>
      <% } else { %>
        <div class="heart-image" style="background-image: url(http://i.imgur.com/7Wcss6M.png)"></div>
      <% } %>
      <form class="new-comment-form">
        <input type="text" class="comment-text" name="description" placeholder="Add a comment...">
      </form>
    </div>
  </div>
</div>
