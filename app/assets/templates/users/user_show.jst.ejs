<div class="user-profile">
  <div class="user-show">
    <div class="crop">
      <img src= "<%= picture.escape('thumb_url') %>" class="avatar">
    </div>
    <h1><%= user.escape('username') %></h1>

    <span><strong><%= user.escape('username') %> </strong>
      <div class="quote">
         <%= user.escape("quote") %>
      </div>
    </span>

    <% if( user.escape("id") === Napagram.CURRENT_USER.id) {%>
      <% %>
    <% } else if(user.following_().isNew()) { %>
        <button type="button" class="btn btn-success following-btn">FOLLOW</button>
      <%} else {%>
        <button type="button" class="btn btn-default following-btn">UNFOLLOW</button>
    <% } %>

    <ul class="profile-stats">
      <li class="profile-stat"><strong><%= user.escape("total_posts") %></strong> Posts</li>
      <li class="profile-stat"><strong><%= user.escape("followers_count") %></strong> Followers</li>
      <li class="profile-stat"><strong><%= user.escape("following_count") %></strong> Following</li>
    </ul>
  </div>
  <div class="user-posts"></div>
</div>
