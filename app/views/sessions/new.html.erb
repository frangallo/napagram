<h1>Sign In!</h1>

<form action="<%= session_url %>" method="post">
  <%= auth_token_input %>
  <label for="username">Username</label>
  <input type="text" name="user[username]" value="" id="username" >
  <br>
  <label for="password">Password</label>
  <input type="password" name="user[password]" value="" id="password" >
  <br>
  <input type="submit" value="Sign In!">
</form>

<script type="text/javascript">
  $('button#guest-login').click(function(){
    $("input[name='user[username]']").val("Guest");
    $("input[name='user[password]']").val("guestguest");
    $('#login-button').click()
  })
</script>
